@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

@model SliderCreateVM

@{
    ViewData["Title"] ="Create";
}
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">
                   Create Slider Form
                </p>
                <form  method="post" class="forms-sample" >
                    <div class="form-group">
                        <label asp-for="ImageUrl">ImageUrl</label>
                        <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Description</label>
                        <input asp-for="Desc"  class="form-control"  placeholder="Description">
                        <span asp-validation-for="Desc"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
 
   <partial name="_ValidationPartial"></partial>
}

